<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
       <ListView
           android:paddingTop="30px"
           android:id="@+id/lv_note"
           android:layout_width="600px"
           android:background="#002e56"
           android:layout_height="match_parent"
           android:layout_above="@+id/iv_add_note"
           android:divider="@null"
           android:dividerHeight="@dimen/tabTextSize"
     />
        <ImageView
            android:id="@+id/iv_add_note"
             android:layout_centerHorizontal="true"
            android:layout_marginBottom="80px"
            android:layout_alignParentBottom="true"
            android:layout_height="70px"
            android:layout_width="70px"
            android:src="@mipmap/add"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <EditText
        android:id="@+id/ev_write"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_edit"
        android:singleLine="false"
        android:padding="40px"
        android:inputType="textNoSuggestions|textMultiLine"
        android:lineSpacingMultiplier="1.2"
        android:lineSpacingExtra="20px"
        android:background="#002e56"
        android:textColor="@color/white"
        android:textSize="@dimen/tabTextSize"/>
        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80px"
            android:gravity="center"
            >
        <LinearLayout
            android:id="@+id/ll_cancle"
            android:layout_height="60px"
            android:layout_width="wrap_content"
            android:gravity="center"
            >
           <ImageView
               android:layout_gravity="center_vertical"
               android:layout_width="30px"
               android:layout_height="30px"
               android:src="@drawable/icon_cancel"
               />
            <TextView
                android:layout_marginLeft="30px"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/tabTextSize"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="@string/note_tv_delete"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_save"
                android:layout_height="60px"
                android:layout_width="wrap_content"
                android:layout_marginLeft="200px"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:src="@drawable/icon_save"
                    />
                <TextView
                    android:layout_marginLeft="30px"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/tabTextSize"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="@string/note_tv_save"
                    />
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
</LinearLayout>
