<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_marginLeft="650px"
            android:layout_height="60px"
            android:layout_width="60px"
            android:src="@drawable/pic_head_default"
            />
        <TextView
            android:layout_marginLeft="800px"
            android:gravity="center"
            android:id="@+id/invisible_textview"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="40px"
            android:textColor="@color/white_1"
            android:text="双击退出当前模式"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_currenttime"
            android:layout_marginLeft="1200px"
            android:layout_height="40px"
            android:layout_width="120px"
            android:textSize="30px"
            android:textColor="@color/textSelect"
            />
        <ImageView
            android:layout_height="30sp"
            android:layout_width="30sp"
            android:layout_marginLeft="30px"
            android:background="@drawable/navigation"
            />
        <ImageView

            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="30px"
            android:background="@drawable/signal"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="30px"
            android:background="@drawable/bluetooth"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="30px"
            android:background="@drawable/gps"
            />
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="30px"
            android:background="@drawable/udisk"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/downFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
</FrameLayout>
</LinearLayout>