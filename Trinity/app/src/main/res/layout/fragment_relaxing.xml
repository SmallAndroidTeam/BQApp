<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/left"
            android:layout_width="350px"
            android:layout_height="match_parent">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/right"
            android:layout_width="350px"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/left"
            android:layout_toLeftOf="@+id/right"
            >
            <LinearLayout
                android:id="@+id/leftMenu"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/leftOnlinebutton"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/online"
                  android:visibility="invisible"
                  android:textColor="#ffffff"
                  android:layout_marginTop="140px"
                  android:textSize="36px"/>
                <TextView
                    android:id="@+id/leftLocalbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/local"
                    android:textSize="36px"
                    android:layout_marginTop="62px"
                    android:textColor="#ffffff"/>
            </LinearLayout>
              <ImageView
                  android:id="@+id/leftMenuLiner"
                  android:layout_toRightOf="@+id/leftMenu"
                  android:layout_width="134px"
                  android:layout_marginLeft="6px"
                  android:layout_marginTop="35px"
                  android:layout_height="match_parent"
                  android:scaleType="fitXY"

                  android:src="@drawable/bg_online"
                  android:layout_marginBottom="85px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/leftMenuLiner"
                android:layout_toLeftOf="@+id/rightMenuLiner">
                <FrameLayout
                    android:id="@+id/multimediaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </FrameLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/rightMenuLiner"
                android:layout_toLeftOf="@+id/rightMenu"
                android:layout_width="134px"
                android:layout_height="match_parent"
                android:layout_marginTop="35px"
                android:layout_marginRight="6px"
                android:scaleType="fitXY"
                android:src="@drawable/bg_rinternet"/>
            <LinearLayout
                android:id="@+id/rightMenu"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rightOnlinebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online"
                    android:visibility="invisible"
                    android:textColor="#ffffff"
                    android:layout_marginTop="140px"
                    android:textSize="36px"/>
                <TextView
                    android:id="@+id/rightLocalbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/local"
                    android:textSize="36px"
                    android:layout_marginTop="62px"
                    android:textColor="#ffffff"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>